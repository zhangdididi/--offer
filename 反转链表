/*
public class ListNode {
    int val;
    ListNode next = null;

    ListNode(int val) {
        this.val = val;
    }
}*/
public class Solution {
    public ListNode ReverseList(ListNode head) {
        if (head == null || head.next == null) {
            return head;
        }
        
        //此时链表至少有两个节点。
        ListNode left = head;
        ListNode mid = left.next;
        //第三个节点，有可能为null
        ListNode right = mid.next;
        while (right != null) {
            mid.next = left;
            left = mid;
            mid = right;
            right = right.next;
        }
        mid.next = left;
        head.next = null;
        head = mid;
        return mid;
    }
}



/*
public class ListNode {
    int val;
    ListNode next = null;

    ListNode(int val) {
        this.val = val;
    }
}*/
public class Solution {
    public ListNode ReverseList(ListNode head) {
        if (head == null || head.next == null) {
            return head;
        }
        ListNode newHead = null;
        while (head != null) {
            ListNode prev = head;
            head = head.next;
            prev.next = newHead;
            newHead = prev;
        }
        return newHead;
        
    }
}




