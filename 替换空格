public class Solution {
    public String replaceSpace(StringBuffer str) {
    	for (int i = 0; i < str.length(); i++) {
            if (str.charAt(i) == ' ') {
                str.setCharAt(i, '%');
                i++;
                str.insert(i, '2');
                i++;
                str.insert(i, '0');
            }
        }
        return str.toString();
    }
}
